<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_nocon"
    android:visibility="gone"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/iv_nocon"
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_nocon"/>

    <TextView
        android:id="@+id/tv_nocon1"
        android:layout_below="@id/iv_nocon"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Koneksi terputus"/>

    <TextView
        android:id="@+id/tv_nocon2"
        android:layout_below="@id/tv_nocon1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Periksa kembali koneksi anda"/>

    <Button
        android:id="@+id/btn_reload"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_nocon2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Muat ulang"/>

</RelativeLayout>