<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAmbulance" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/clr_button</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="ToolbarContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="elevation">2dp</item>

    </style>

    <style name="TextHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_weight">2</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextOnBoarding">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="fontFamily">@font/playfair_display_black</item>
        <item name="android:textColor">@color/clr_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ButtonPesan">
        <item name="backgroundTint">@color/clr_button</item>
        <item name="android:layout_width">215dp</item>
        <item name="android:layout_height">225dp</item>
        <item name="cornerRadius">120dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">#619E97</item>
        <item name="fontFamily">@font/playfair_display_bold</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="FabSettings">
        <item name="backgroundTint">@color/clr_button</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="ButtonStarted">
        <item name="backgroundTint">@color/clr_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ButtonLogin">
        <item name="backgroundTint">@color/clr_button</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>